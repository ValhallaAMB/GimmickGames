<header>
  <nav class="navbar bg-dark navbar-dark navbar-expand-md px-3">
    <div class="container-fluid fs-5">
      <a class="navbar-brand" href="/index">
        <img
          src="/images/gimmick-games-logo.png"
          alt="Logo"
          style="width: 40px; height: 40px"
        />
        <span class="ms-22">Gimmick Games</span>
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a
              class="nav-link position-relative"
              href="/scores/leaderboard/snakeGame"
              >Snake Game</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link position-relative"
              href="/scores/leaderboard/spaceIndex"
              >Space Invaders</a
            >
          </li>
        </ul>

        <ul class="navbar-nav ms-auto">
          <% if(user){ %>
          <li class="nav-item">
            <a class="nav-link position-relative" href="/users/profile"
              >My Profile</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link position-relative" href="/users/logout"
              >Log out</a
            >
          </li>
          <% } else { %>
          <li class="nav-item">
            <a
              class="nav-link position-relative"
              data-bs-toggle="modal"
              data-bs-target="#loginModal"
              style="cursor: pointer"
            >
              Log in
            </a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1">
  <%- include("./loginModal.ejs") %>
</div>

<!-- Register Modal -->
<div class="modal fade" id="registerModal" tabindex="-1">
  <%- include("./registerModal.ejs") %>
</div>

<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1">
  <%- include("./forgotPasswordModal.ejs") %>
</div>

<!-- Reset Password Modal -->
<div
  class="modal fade"
  id="resetPasswordModal"
  tabindex="-1"
  data-bs-backdrop="static"
>
  <%- include("./resetPasswordModal.ejs") %>
</div>

<!-- Change Password Modal -->
<div
  class="modal fade"
  id="changePasswordModal"
  tabindex="-1"
  data-bs-backdrop="static"
>
  <%- include("./changePasswordModal.ejs") %>
</div>


