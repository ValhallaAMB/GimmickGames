<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      #board {
        background-color: rgb(14, 14, 14);
      }

      #instruction-text {
        top: 28%;
      }
    </style>
  </head>
  <body>
    <main>
      <div class="scores container d-flex justify-content-center text-white">
        <h5 id="score">Score: 0</h5>
        <!-- <h1 class="fs-5" id="highScore">Highscore: 0</h1> -->
      </div>
      <div class="container d-flex justify-content-center">
        
        <div
          class="fs-4 text-capitalize text-white text-center position-fixed"
          id="instruction-text"
        >
          <br />
          <h1>
            Space <br />
            Invaders
          </h1>
          <p>
            <br />
            Press spacebar <br />
            to start the game
          </p>
        </div>
          <canvas id="board"> </canvas>
        
      </div>
      
    </main>


    <!-- Modal -->
    <div
      class="modal fade"
      id="scoreModal"
      tabindex="-1"
      data-bs-backdrop="static"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-body">
            <h5 class="modal-title text-center text-light" id="scoreModalLabel">
              Game Over
            </h5>
            <h6 class="text-light text-center">
              Your Score: <span id="finalScore"></span>
            </h6>
            <form id="scoreForm" method="POST" action="/scores/save">
              <div class="text-center">
                <input
                  type="hidden"
                  id="gameId"
                  name="gameId"
                  value="<%= gameId %>"
                />
                <input
                  type="hidden"
                  id="scoreInput"
                  name="scoreValue"
                  value=""
                />
                <% if (user){ %>
                <button type="submit" class="btn btn-primary w-50">
                  Play again
                </button>
                <% } else { %>
                <a
                  class="btn btn-primary w-50"
                  href="/games/spaceInvaders"
                  >Play again</a
                >
                <% } %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/spaceInvaders.js"></script>
  </body>
</html>
