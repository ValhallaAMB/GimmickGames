<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content px-4">
    <div class="modal-header">
      <button
        type="button"
        class="btn-close btn-close-white"
        data-bs-dismiss="modal"
      ></button>
    </div>
    <div class="modal-body">
      <h5 class="modal-title text-center text-light mb-3">Register</h5>
      <%- include('./messages') -%>
      <form class="mx-5 mx-md-0" action="/users/register" method="POST">
        <div class="form-floating mb-4">
          <input
            type="name"
            class="form-control"
            id="name"
            name="name"
            placeholder="Username"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
          <label for="floatingInput" class="text-light">Username</label>
        </div>
        <div class="form-floating mb-4">
          <input
            type="email"
            class="form-control"
            id="emal"
            name="email"
            placeholder="name@example.com"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
          <label for="floatingInput" class="text-light">Email address</label>
        </div>
        <div class="form-floating mb-4">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
          <label for="floatingPassword" class="text-light">Password</label>
        </div>
        <div class="form-floating mb-4">
          <input
            type="password"
            class="form-control"
            id="passwordConfirmation"
            name="passwordConfirmation"
            placeholder="Password"
            value="<%= typeof passwordConfirmation != 'undefined' ? passwordConfirmation : '' %>"
          />
          <label for="floatingPasswordConfirmation" class="text-light"
            >Password Confirmation</label
          >
        </div>
        <div class="text-center">
          <button
            type="submit"
            class="btn btn-primary mb-2 w-100"
            id="signUpBtn"
          >
            Sign Up
          </button>
          <p class="text-white-50">
            Already have an account?
            <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal"
              >Log in</a
            >
          </p>
        </div>
      </form>
    </div>
  </div>
</div>

<% if (typeof showModal !== 'undefined' && showModal === 'registerModal') { %>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    var registerModal = new bootstrap.Modal(
      document.getElementById("registerModal")
    );
    registerModal.show();
  });
</script>
<% } %>
